class Solution {
     public void merge(int[] nums1, int m, int[] nums2, int n) {
        //判断最大值
        //指针法，
         while (n>0&&m>0){
            if (nums1[m-1]<nums2[n-1]){
                nums1[m+n-1]=nums2[n-1];
                n--;
            }
            else {
                nums1[m+n-1]=nums1[m-1];
                m--;
            }
        }
        if (m == 0 && n > 0)
        {
            for (int i=0; i<n; ++i)
                nums1[i] = nums2[i];
        }
    
}}
